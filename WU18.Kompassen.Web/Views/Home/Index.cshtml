<div class="container">

    <br />

    <div class="paddingtop btn-group-toggle btn-group">

        <button id="navKurser" class="btn btn-primary" type="submit">Kurser</button>
        <button id="navAddNewStudent" class="btn btn-primary" type="submit">Ny kurs</button>
        <button id="navStudenter" class="btn btn-primary" type="submit">Studenter</button>

    </div>

    <hr />

    <!-------------------- Panel 1 --------------------->
    <div id="panel1" class="panel panel-primary">

        <div class="panel-heading">Kurser</div>
        <br />

        <div class="container">

            <div class="row">

                <div class="col-lg-10">

                    <table class="table">

                        <thead>

                            <tr>
                                <th scope="col">Kursnamn</th>
                                <th scope="col">Poäng</th>
                                <th scope="col">Termin</th>
                                <th scope="col">År</th>
                                <th scope="col">Aktiv/Inaktiv</th>
                                <!--<th scope="col">Ändra/Ta bort</th>-->
                            </tr>

                        </thead>

                        <tbody id="coursesTable"></tbody>

                    </table>

                </div><!--col-lg-10 end-->
            </div><!--row end-->
        </div><!--container end-->
    </div> <!--Panel End-->

    <!-------------------- Panel 3 --------------------->
    <div id="panel3" class="panel panel-primary">

        <div class=" panel-heading ">
            Ny Kurs
            <div class="pull-right"><Button id="btnClose" class="nobg"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></Button></div>
        </div>

        <br />

        <div class="container">
            <div class="row">

                <div class="col-lg-10">

                    <form id="createCourse">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Namn</label>
                            <input type="text" class="form-control" name="courseName" id="kurser_Namn" placeholder="Namn">
                        </div>

                        <div class="form-group">
                            <label for="formGroupExampleInput">Poäng</label>
                            <input type="text" class="form-control" name="courseCredits" id="kurser_Poäng" placeholder="Poäng">
                        </div>

                        <div class="form-group">
                            <label for="formGroupExampleInput">År</label>
                            <input type="text" class="form-control" name="courseYear" id="kurser_År" placeholder="År">
                        </div>

                        <div class="form-group">
                            <label for="formGroupExampleInput">Termin</label>
                            <input type="text" class="form-control" name="courseTerm" id="kurser_Termin" placeholder="Termin">
                        </div>
                        
                        <div class="form-group">
                            <input type="checkbox" class="form-check-input" id="kurser_Aktiv">
                            <label for="formGroupExampleInput">Aktiv</label>
                        </div>

                    </form>

                    <div class="col-lg-4 padding paddingbot">
                        <button type="submit" class="btn btn-success" id="saveCourse">Spara</button>

                    </div>

                    <table class="table">

                        <thead>

                            <tr>
                                <th scope="col">Kursnamn</th>
                                <th scope="col">Poäng</th>
                                <th scope="col">Termin</th>
                                <th scope="col">År</th>
                                <th scope="col">Aktiv/Inaktiv</th>
                            </tr>

                        </thead>

                        <tbody id="coursesTable1"></tbody>

                    </table>

                </div><!--col-lg-10 end-->
            </div><!--row end-->
        </div><!--container end-->
    </div> <!--Panel End-->
</div><!--container end-->



